{
  "compilerOptions": {
    "sourceMap": true,
    "typeRoots": [ "node_modules/@types" ],
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "declaration": false,
    "watch": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "config", "src/server.ts"]
}
  

